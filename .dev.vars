# Cloudflare Environment Variables for Trading Bots
NEXTJS_ENV=development

# Cloudflare Credentials
CLOUDFLARE_ACCOUNT_ID=your-account-id-here
CLOUDFLARE_D1_TOKEN=your-api-token-here
CLOUDFLARE_R2_URL=your-r2-url-here
CLOUDFLARE_API_TOKEN=your-api-token-here

# Authentication
BETTER_AUTH_SECRET=your-better-auth-secret
BETTER_AUTH_URL=http://localhost:3000

# Google Auth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Trading Bot Configuration
OKX_API_KEY=your-okx-api-key
OKX_SECRET=your-okx-secret
OKX_PASSPHRASE=your-okx-passphrase
OKX_SANDBOX=true

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_API_ID=your-telegram-api-id
TELEGRAM_API_HASH=your-telegram-api-hash

# Trading Configuration
DEFAULT_MARKET=BTC-USDT-SWAP
DEFAULT_QUANTITY=1
REVERSE_TRADING_ENABLED=true
RISK_MANAGEMENT_ENABLED=true
MAX_DAILY_LOSS=0.05
MAX_POSITION_SIZE=100

# VPS Configuration (for your existing VPS)
VPS_HOST=your-vps-host
VPS_PORT=22
VPS_USER=your-vps-user
